<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <IsPackable>true</IsPackable>
        <LangVersion>latest</LangVersion>
        <TargetFramework>net6.0</TargetFramework>
        <AssemblyName>GoogleFormsClient</AssemblyName>
        <RootNamespace>GoogleFormsClient</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <Version>1.0.0</Version>
        <IsPackable>true</IsPackable>
        <Authors>Pavel Kobyakov</Authors>
        <Product>Google forms client</Product>
        <PackageTags>Google Forms API Client</PackageTags>
        <Description>
            This client library allows you to get the structure of a Google form with answer IDs
            and also send these answers to the google forms.
        </Description>
        <Copyright>Â© 2023 Pavel Kobyakov</Copyright>
        <PackageProjectUrl>https://github.com/Ashymonth/GoogleFormClient</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Ashymonth/GoogleFormClient</RepositoryUrl>
        <RepositoryType>github</RepositoryType>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <ItemGroup>
        <None Include="..\..\README.md" Pack="true" PackagePath="" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="HtmlAgilityPack" Version="1.11.52" />
        <PackageReference Include="Microsoft.Extensions.Http" Version="7.0.0" />
        <PackageReference Include="System.Text.Json" Version="7.0.3" />
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="GoogleFormsClient.Tests" />
    </ItemGroup>

</Project>
